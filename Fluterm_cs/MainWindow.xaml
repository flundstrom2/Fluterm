<Window x:Class="Fluterm_cs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800" Initialized="OnInitialized">
    <Grid>
        <Menu HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Print"/>
                <MenuItem Header="Exit..."/>
            </MenuItem>
            <MenuItem Header="Edit"/>
            <MenuItem Header="Window"/>
            <MenuItem Header="Help"/>
        </Menu>
        <Grid HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Height="503" Width="772">

            <RichTextBox HorizontalAlignment="Left" MinHeight="480" VerticalAlignment="Top" MinWidth="640" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="RichTextBox"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Grid>
        <Grid HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Height="29" Width="772">
            <StatusBar HorizontalAlignment="Left" MinHeight="20" VerticalAlignment="Center" MinWidth="240">
                <StatusBarItem Content="My StatusBarItem"/>
            </StatusBar>
            <ProgressBar x:Name="ProgressBar1" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center" Width="90" MinHeight="20" Minimum="0" Maximum="100" Value="25"/>
        </Grid>
    </Grid>
</Window>
